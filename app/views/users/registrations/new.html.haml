.signup-wrapper
  = render "users/shared/header_user"
  .signup-main
    %span.signup-title 新規登録
    .signup-inner
      = form_with model: @user, url: users_sign_up_credit_path, method: :get, id: 'new_user', class: 'signup-user s12', local: true do |f|
        .signup-user__inner.row
          .input-field.col.s6
            %i.material-icons.prefix account_circle
            = f.text_field :name, autocomplete: "name", placeholder: "例) 太郎"
            %label 氏名
        .signup-user__inner.row
          .input-field.col.s6
            %i.material-icons.prefix account_circle
            = f.text_field :name_kana, autocomplete: "name_kana", placeholder: "例) タロウ"
            %label 氏名(カナ)
        .signup-user__inner.row
          .input-field.col.s6
            %i.material-icons.prefix email
            = f.email_field :email, autocomplete: "email", placeholder: "例) xxx@exsample.com"
            %label メールアドレス
        .signup-user__inner.row
          .input-field.col.s4
            %i.material-icons.prefix lock_outline
            = f.password_field :password, autocomplete: "password", placeholder: "例) 6文字以上の英数字"
            %label パスワード
        .signup-user__inner.row
          .input-field.col.s4
            %i.material-icons.prefix lock_outline
            = f.password_field :password_confirmation, autocomplete: "password", placeholder: "例) 6文字以上の英数字"
            %label パスワード再確認
        .signup-user__inner.row
          .input-field.col.s4
            %i.material-icons.prefix favorite
            = f.text_field :favorite, autocomplete: "favorite", placeholder: "チームA"
            %label 好きなチーム
        .signup-user__button
          =f.submit "次へ", class:"waves-effectv waves-light btn-large indigo"

  = render "users/shared/footer_user"






