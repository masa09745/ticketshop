.schedule-wrapper
  = render "shared/header-main"
  .schedule-details
    .schedule-details__inner
      .match-index
        .match-index__date
          = @schedule.match_date.strftime('%m月 %d日')
        .match-index__time
          = @schedule.match_date.strftime('%H:%M')
        .match-index__stadium
          = @schedule.venue.name
      .match-title
        %span
          = @schedule.team1.name
        %span
          VS
        %span
          = @schedule.team2.name
      .match-ticket
        - @stocks.each do |stock|
          .match-ticket__inner
            .match-ticket_grade
              = stock.seat_type
            .match-ticket__price
              =stock.price
              円
            .match-ticket__buy
              =link_to "" do
                枚数を選ぶ
          
= render "shared/footer-main"