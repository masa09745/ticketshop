= render "shared/header_main"
.schedule-wrapper
  .schedule-inner
    .schedule-inner__top
      =link_to stadiums_path do
        %span スタジアム一覧

    .schedule-inner__month
      %span 今月の試合
      .match-box
        -@matches.each do |match|
          .match-box__inner
            = link_to schedule_path(match) do
              =match.match_name
      .calender
        = month_calendar events: @matches do |date, matches|
          = date.day
          - matches.each do |match|
            .match-name
              = link_to schedule_path(match) do
                = match.match_name
= render "shared/footer_main"
