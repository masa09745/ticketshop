= render "shared/header_main"
.stadium-wrapper
  .stadium-inner
    .stadium-inner__top
      =link_to schedules_path do
        %span スケジュール一覧
    .stadium-inner__contents
      .stadium-title
        %span スタジアム一覧
      .stadium-main
        - @venues.each do |venue|
          .stadium-info
            .stadium-info__thumbnail
              = image_tag venue.image.url, class: 'stadium-image'
            .stadium-info__text
              %span
                =venue.name
              =link_to venue_path(venue) do
                %span 詳細