.TeamSchedule-wrapper
  = render "shared/header-main"
  .TeamSchedule-main
    -@schedules.each do |schedule|
      .schedule-box
        .match-date
          =schedule.match_date.strftime('%m月 %d日')
        .match-time
          =schedule.match_date.strftime('%H:%M')
        .team-name
        -if schedule.team1_id == @team.id
          =link_to schedule_path(schedule) do
            = schedule.team2.name
        - else
          =link_to schedule_path(schedule) do
            = schedule.team1.name